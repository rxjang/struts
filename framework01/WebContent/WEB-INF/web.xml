<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>framework01</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <listener>
  	<listener-class>com.bit.util.Ex05</listener-class>
  </listener>
    <context-param>
      <param-name>cmsg</param-name>
      <param-value>ABCD</param-value>
   </context-param>

   <servlet>
      <servlet-name>ex01</servlet-name>
      <servlet-class>com.bit.controller.Ex01Controller</servlet-class>
      <init-param>
         <param-name>msg1</param-name>
         <param-value>abcd</param-value>
      </init-param>
   </servlet>

   <servlet-mapping>
      <servlet-name>ex01</servlet-name>
      <url-pattern>/ex01</url-pattern>
   </servlet-mapping>

   <filter>
      <filter-name>ex02</filter-name>
      <filter-class>com.bit.util.Ex02</filter-class>
      <init-param>
      <param-name>encoding</param-name>
      <param-value>utf-8</param-value>
      </init-param>
   </filter>
   <filter-mapping>
      <filter-name>ex02</filter-name>
      <url-pattern>/*</url-pattern>
   </filter-mapping>

   <filter>
      <filter-name>ex03</filter-name>
      <filter-class>com.bit.util.Ex03</filter-class>
   </filter>

   <filter-mapping>
      <filter-name>ex03</filter-name>
      <url-pattern>/ex01</url-pattern>
   </filter-mapping>

</web-app>